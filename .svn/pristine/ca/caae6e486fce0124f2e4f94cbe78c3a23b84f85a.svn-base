<mapper namespace="Admin">

	<!-- 관리자 - 회원검색 클릭시 전체 정보를 불러들임 -->
	<select id="adminMemberAllList" resultType="hs.member.dto.MemberDTO">
		select * from member
		order by name asc
	</select>

	<!-- 관리자 - 검색 정보 불러들이기 -->
	<select id="adminSearchMember" resultType="hs.member.dto.MemberDTO">
		select * from member
		where	1=1
			<if test="id!=null">
				and id like ('%'||#{id}||'%')
			</if>
			<if test="email!=null">
			and	email like ('%'||#{email}||'%')
			</if>
			<if test="hp!=null">
			and	hp like ('%'||#{hp}||'%')
			</if>
			<if test="name!=null">
			and	name like ('%'||#{name}||'%')
			</if>
			
			
